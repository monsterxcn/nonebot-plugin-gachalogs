# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.py, *.pyi, *.ipynb, *.toml}]
indent_size = 4

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false